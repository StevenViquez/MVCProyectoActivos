<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Electronics</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Control de Activos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Mantenimiento <span class="glyphicon  glyphicon glyphicon-plus" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Asegurador", "List", "Asegurador")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Marca", "List", "Marca")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Tipo de Activo", "List", "TipoActivo")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Usuario", "List", "Usuario")</li>


                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Procesos   <span class="glyphicon  glyphicon-cog" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Facturar", "Index", "Factura")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Reportes <span class="glyphicon  glyphicon glyphicon-print" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Grafico Producto", "GraficoProducto", "Grafico")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Analytics 1", "Analytics1", "Grafico")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Catálogo (PDF)", "ProductoCatalogo", "Reporte")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Ventas por rango fecha", "x", "x")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Catalogo de Productos", "x", "x")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Productos por Descripción", "x", "x")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Catálogo de Clientes", "x", "x")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Clientes por Nombre", "x", "x")</li>

                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav ">
                    <li>
                        <a href="@Url.Action("About", "Home")">
                            Acerca de
                            <span class="glyphicon  glyphicon-book" aria-hidden="true"></span>
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav ">
                    <li>
                        <a href="@Url.Action("Logout", "Login")">
                            Logout
                            <span class="glyphicon   glyphicon-log-out" aria-hidden="true"></span>
                        </a>

                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @{
                            string nombre = "";
                            Infrastructure.Models.Usuario oUsuario;
                            // Validar si vienen datos en la session
                            if (Session["User"] != null)
                            {
                                // Casting
                                oUsuario = Session["User"] as Infrastructure.Models.Usuario;

                                if (oUsuario != null)
                                {
                                   nombre = $"{oUsuario.Nombre} {oUsuario.Apellidos}";
                                }
                            }


                        }

                        <a href="#">
                            Usuario: @nombre
                            <span class="glyphicon  glyphicon-user " aria-hidden="true"></span>
                        </a>


                    </li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Desarrollado para fines Educativos.  </p>
            <p> MRT. Anthony Morera V</p>
            @*<p>Version @typeof(Web.MvcApplication).Assembly.GetName().Version.ToString()</p>*@

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
